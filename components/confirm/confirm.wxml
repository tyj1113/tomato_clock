<view class="container" wx:if="{{visible}}">
    <view class="confirm">
        <textarea placeholder="{{placeholder}}" value="{{value}}" bind:input="updateValue"></textarea>
        <view class="actions">
            <view hover-class="active" class="sure" bind:tap="confirm">确定</view>
            <view hover-class="active" bind:tap="cancel">取消</view>
        </view>
    </view>
</view>
