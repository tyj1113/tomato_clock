.container {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.2);
}
.confirm {
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    border-radius: 18rpx;
    padding: 40rpx 28rpx 20rpx;
    min-width: 540rpx;
}
textarea {
    height: 160rpx;
    background: #f2f2f2;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #737373;
    padding:20rpx;
    margin-bottom: 20rpx;
}
.actions {
    width: 100%;
    display: flex;
    align-items: center;
    position: relative;
}
.actions > view {
    background: #f2f2f2;
    width: 50%;
    text-align: center;
    height: 66rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #bbb;
}
.actions > view.active {
    opacity: 0.5;
}
.actions .sure {
    color: #F6705A;
}
.actions::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 4rpx;
    height: 100%;
    background: #F6705A;
}
