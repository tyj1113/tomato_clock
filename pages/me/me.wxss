.container {
    background: #F6F6F6;
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.header {
    height: 170rpx;
    background: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0 25rpx;
    box-sizing: border-box;
}

.left {
    display: flex;
    align-items: center;
}

.header .avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx;
    border: 8rpx solid #F6705A;
}

.header .nameWrapper {
    display: flex;
    align-items: center;
    color: #F6705A;
    font-size: 32rpx;
    padding-bottom: 22rpx;
}

.question::after {
    border: none;
}

.question {
    margin: 0;
    background: transparent;
    color: #FE996F;
    font-size: 24rpx;

}

.tabs {
    background: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    padding: 20rpx 0;
}

.tabs > view {
    position: relative;
}

.tabs > view.active {
    opacity: 0.5;
}

