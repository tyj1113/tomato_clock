.container .list {
    flex: 1;
    overflow: scroll;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.container .list .item {
    background: #fff;
    font-size: 32rpx;
    color: #333;
    border-radius: 8rpx;
    padding: 18rpx 40rpx 30rpx;
    box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 30rpx;
}

.container .list .item .date {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 24rpx;
}

.container .list .item .content {
    display: flex;
    padding-bottom: 24rpx;
}

.container .list .item .content .time {
    padding-right: 20rpx;
}

.container .list .item .content .detail {
    flex: 1;
}


