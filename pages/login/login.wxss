.login {
    height: 100vh;
    background: #EEF7F6;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.login .avatar {
    width: 250rpx;
    height: 250rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 18rpx solid #F6705A;
    margin-bottom: 20rpx;
}

.login .nameWrapper {
    color: #F6705A;
    font-size: 38rpx;
    position: relative;
    margin-bottom: 70rpx;
    width: 100%;
    display: flex;
    justify-content: center;
}

.login .nameWrapper::after {
    content: "";
    width: 30%;
    height: 5rpx;
    background: #F6705A;
    position: absolute;
    bottom: -20rpx;
    left: 50%;
    transform: translateX(-50%);
}

.loginButton,.experienceButton {
    width: 360rpx;
    height: 80rpx;
    border-radius: 14rpx;
    background: linear-gradient(to right, #F98162, #F66C56);
    box-shadow: 0rpx 8rpx 16rpx rgba(246, 108, 86, 0.3);
    color: #fff;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx
}

.button-hover {
    opacity: 0.6;
}

